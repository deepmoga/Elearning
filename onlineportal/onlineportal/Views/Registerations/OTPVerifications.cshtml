@model onlineportal.Models.Registeration
@{
    ViewBag.Title = "OTPVerifications";
    Layout = "~/Views/Shared/ViewPage1.cshtml";
}

<div class="container be-detail-container">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <br>
            <img src="https://cdn2.iconfinder.com/data/icons/luchesa-part-3/128/SMS-512.png" class="img-responsive" style="width:200px; height:200px;margin:0 auto;"><br>

            <h1 class="text-center">Verify your OTP</h1><br>
            <p class="lead" style="align:center"></p><p> Thanks for giving your details. An OTP has been sent to your Mobile Number. Please enter the 4 digit OTP below for Successful Registration</p>  <p></p>
            <br>

            @using (Html.BeginForm( FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="form-group col-md-8">
                       
                        <div class="col-md-10">
                           <input name="otpvalue" value="" class="form-control" />
                            @Html.ActionLink("Click Here To Resend Your OTP", "Resendotp",new {id=TempData["code"] })
                            @Html.ValidationMessageFor(model => model.OTP, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    
                    <input type="submit" value="Verify" class="btn btn-primary  pull-right col-sm-3" />
                </div>
            }

            <br><br>
        </div>
    </div>
</div>

